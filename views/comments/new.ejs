<!---New Photo Comment-->
<% include ../partials/header %>
<h1>Add New Comment</h1>
<div class="row">
    <div class="col-12">
<form action="/photos/<%= photo._id %>/comments" method="POST">
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Name</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Enter Name Here" name="comment[author]" rows="1"></textarea>
        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Add Comment</label>
          <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Enter Comment Here" name="comment[text]" rows="1"></textarea>
        </div>
        <button type="submit" class="btn btn-primary mb-2">Submit</button>
</form>
    </div>
</div>

<% include ../partials/footer %>